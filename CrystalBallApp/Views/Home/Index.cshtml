<script src="~/scripts/jquery-3.1.0.js"></script>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<button>Click Me</button>
<p id="reply"></p>
<script>
    $(document).ready(function () {
        $("button").click(function () {
            //alert("yep, works.");
            $.get("@Url.Action("ShakeBall","Home")", function (response) {
                $("#reply").text(response);
            });
        });
    });
</script>
